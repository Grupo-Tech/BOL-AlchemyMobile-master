                </LinearLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/viajes"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:id="@+id/TitleRetenciones"
                    android:clickable="true">

                    <ImageView
                        style="@style/casitaStyle"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/partialpay" />
                    <TextView
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/Retenciones"
                        android:textColor="#000000"
                        android:textSize="18dip" />

                    <TextView
                        android:id="@+id/Retenciones"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="15dip" />

                    <TextView
                        android:id="@+id/RetencionesUSD"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="15dip" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Caja"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:textColor="@color/rojo"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Retorno"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:textColor="@color/rojo"
                        />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnAceptar"
                style="@style/button_normal"
                android:layout_width="match_parent"
                android:text="@string/AceptarValores" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>