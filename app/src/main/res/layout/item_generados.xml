<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/ly_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/viajes"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtCliente"
            style="@style/TextViewGenerados" />

        <TextView
            android:id="@+id/txtRecibo"
            style="@style/TextViewGenerados"
            android:layout_below="@+id/txtCliente" />

        <TextView
            android:id="@+id/txtFecha"
            style="@style/TextViewGenerados"
            android:layout_below="@+id/txtRecibo" />


        <ImageView
            android:id="@+id/anular"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/txtFecha"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/txtCuotas"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:src="@drawable/cancelar"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/factura"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/txtFecha"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@+id/anular"
            android:layout_toRightOf="@+id/txtCuotas"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:src="@drawable/percentage"
            android:textAlignment="center" />


    </RelativeLayout>

</RelativeLayout>